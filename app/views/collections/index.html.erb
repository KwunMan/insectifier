<% content_for :title do %>
Collection
<% end %>
<div class="wrapper-content-page">
  <div class="container">
    <% if @collection.present? %>
    <div class="insect-collection">
      <div class="insect-number">
        <p>
          <%= "# #{ pluralize @collection.size, "Insect" }" %>
        </p>
      </div>
    </div>
    <div class="row-card">
      <div class="cards">
        <% @collection.each do |insect| %>
        <div class="col-xs-3">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('#');">
            <%= link_to "", insect_path(insect), class: 'card-link' %>
            <div class="card-rare">
              <%= insect.rarity %>
            </div>
            <div class="card-name">
              <h2><%= insect.name %></h2>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <% else %>
    <h2>You don't have any insect!</h2>
    <% end %>
  </div>
</div>
<%= render 'shared/footer_collection_active' %>