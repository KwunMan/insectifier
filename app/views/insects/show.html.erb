<% content_for :title do %>
  Insectified!
<% end %>
<div class="wrapper">
  <div class="container-content-page">
    <div class="top-inline" style="text-align:center">
      <div class="image">
        <%= cl_image_tag @collection.picture, width: 190, height: 230, crop: :fill, class: "photo" %>
      </div>
      <div class="insectify name">
        <ul>
          <li><b>Name:</b> <%= @insect.name %> (No. <%= @collection.insect.id %>) </li>
          <li><b>Scientific Name:</b> <%= @insect.scientific_name %> </li>
          <li><b>Kingdom:</b> <%= @insect.kingdom %></li>
          <li><b>Class:</b> <%= @insect.class_insect %></li>
          <li><b>Order:</b> <%= @insect.order %></li>
          <li><b>Family:</b> <%= @insect.family %></li>
        </ul>
      </div>
    </div>
    <div style="text-align:left" class="description">
      <p>
        <%= @insect.description %>
      </p>
    </div>
  </div>
</ul>
<!--     <button class="btn-main">
      <div class="btn-main-wrapper"></div>
      <div class="btn-main-white-top"></div>
      <%#= link_to "Add to Collection", collections_path%>
    </button> -->
</div>
<%= simple_form_for @collection do |f| %>
  <%= f.hidden_field :picture, :value => @collection.picture %>
  <%= f.hidden_field :insect_id, :value => @insect.id %>
  <div class="container-main-page">
    <ul class="list-inline">
      <li>
        <button class="btn-main" acton="submit">
          <div class="btn-main-wrapper"></div>
          <div class="btn-main-white-top"></div>
          <h3>Add Insect</h3>
        <% end %>
      </button>
    </li>
    <li>
      <button class="btn-main">
        <div class="btn-main-wrapper"></div>
        <div class="btn-main-white-top"></div>
        <h3><%= link_to "Cancel", collections_path%></h3>
      </button>
    </li>
  </ul>
</div>
<%= render 'shared/footer_collection_active' %>
</div>