<% content_for :title do %>
Insectifier
<% end %>
<div class="wrapper-content-page">
  <div class="insectified">
    <h1>insectified!</h1>
    <div class="container-content-page">
      <div style="text-align:center;" class="insect-container">
        <%= cl_image_tag @collection.picture, height: 305, width: 200, :class => "photo" %>
        <div class="name">
          <ul>
            <li>name:<br>
              <%= @insect.name %>
            </li>
            <li>family:<br>
              <%= @insect.family %>
            </li>
            <li>rarity:<br>
              <%= @insect.kingdom %>
            </li>
            <li>location:<br>
              <%= @insect.class_insect %>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="row-2">
      <div class="col-xs-12">
        <div style="text-align:left" class="description">
          <p>
            <%= @insect.description %>
          </p>
        </div>
      </div>
    </div>
    <div class="button-add">
      <%= simple_form_for @collection do |f| %>
      <%= f.hidden_field :picture, :value => @collection.picture %>
      <%= f.hidden_field :insect_id, :value => @insect.id %>
      <%= f.submit "Add to collection", class: "btn magnify btn-lg btn-block" %>
      <% end %>
    </div>