<% content_for :title do %>
  Challenges
<% end %>
<div class="subtitle" style="display:flex; justify-content: space-around; align-items:center; margin-bottom:15px;">
  <p>
    <%= "Challenge score - #{@score} Pt." %> </p>
  <button class="btn-main" id="small">
    <div class="btn-main-wrapper" id="small" style="padding-bottom:0px;"></div>
    <div class="btn-main-white-top" id="small"></div>
    <%= link_to leaderboard_path, method: :get do %>
      <%= image_tag("award.png", size: '25x25', style: "-webkit-filter: invert(1);") %>
    <% end %>
  </button>
</div>
<div class="container padding-bottom">
  <div class="row">
    <% @challenges.each do |challenge| %>
      <div class="col-xs-3 paddings" align="center">
        <% if challenge.done?(current_user) %>
          <div class="challenge-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),url('<%= image_path challenge.poster%>');">
            <%= image_tag("completed.png", style: "margin-top:50%", :size =>'80x45') %>
          <% else %>
            <div class="challenge-card" style="background-image: url('<%= image_path challenge.poster%>');">
            <% end %>
            <%= link_to "", challenge_path(challenge), class: 'card-link' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/footer_challenge_active' %>